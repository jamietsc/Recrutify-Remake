@code {
    [Parameter]
    public int tid { get; set; }

    async void start()
    {
        int insertedID = await bewerberData.InsertVornameNachname(bewerberModel);
        bewerberModel.BID = insertedID;
        bewerberTestModel.BID = insertedID;

